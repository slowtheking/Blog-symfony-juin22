{% extends 'layout.html.twig' %}

{% block title %}
	{{parent()}}
	- Article
{% endblock %}

{% block content %}

<div
	class="row d-flex justify-content-center text-center">

	{# Pour (for) chaque article (singulier) de mon tableau DES articles 
		- Je créer une carde avec les infos demandées ex: {{ article.titre }} #}
	{% for article in articles %}
		<div class="card m-1" style="width: 18rem;">
			<div class="card-body">
				<div>
					<a href="{{ path("article_update", {id:article.id}) }}">
						<i class="fas fa-edit mx-1 text-success"></i>
					</a>
					<a href="{{ path("article_delete", {id:article.id}) }}">
						<i class="fas fa-trash mx-1 text-danger" onclick="return confirm('Etes-vous sûr de vouloir supprimer l\'article')"></i>
					</a>

{# ============================== #}
				</div>
				<h5 class="card-title">{{ article.titre }}</h5>
				<h6 class="card-subtitle mb-2 text-muted">
					crée le:{{ article.dateDeCreation | date("d/m/Y \à H\\hi") }}
				</h6>
				{% if article.dateDeModification is null %}
					<h6 class="card-subtitle mb-2 text-muted">
						modifié le:{{ article.dateDeModification | date("d/m/Y \à H\\hi") }}</h6>
				{% endif %}

				<h6>auteur :
					{{ article.id }}

				</h6>
				<p class="card-text">contenu
					{{ article.contenu | slice(0, 150) }}
					...
				</p>
			</p>
			<a href="{{ path("app_articleshow", {id:article.id}) }}" class="btn btn-primary card-link">lire l'article</a>


		</br>


	</div>
</div>{% endfor %}</div>{% endblock %}
